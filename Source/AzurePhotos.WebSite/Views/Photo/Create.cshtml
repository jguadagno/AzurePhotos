@using Mvc.RazorTools.FontAwesome
@model AzurePhotos.Data.Photo

@{
	ViewBag.Title = "Create Photo";
}

<h2>Create</h2>
<h4>Photo</h4>
<hr />

@using (Html.BeginForm("Create", "Photo", FormMethod.Post, new { role = "form", @class = "form-horizontal", enctype = "multipart/form-data" })) 
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true)

	<div class="form-group">
		@Html.LabelFor(model => model.Title, new { @class = "control-label col-sm-2" })
		<div class="col-sm-10">
			@Html.TextBoxFor(model => model.Title, new { @class="form-control", placeholder="Enter the title of the image"})
			@Html.ValidationMessageFor(model => model.Title)
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Description, new { @class = "control-label col-sm-2"})
		<div class="col-sm-10">
			@Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Enter a description or the image" })
			@Html.ValidationMessageFor(model => model.Description)
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.ThumbnailUrl, new { @class = "control-label col-sm-2" })
		<div class="col-sm-10">
			@Html.TextBoxFor(model => model.ThumbnailUrl, new { @class = "form-control", placeholder = "Enter the url of the thumbnail for the image" })
			@Html.ValidationMessageFor(model => model.ThumbnailUrl)
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.PhotoUrl, new { @class = "control-label col-sm-2" })
		<div class="col-sm-10">
			@Html.TextBoxFor(model => model.PhotoUrl, new { @class = "form-control", placeholder = "Enter the url of the image" })
			@Html.ValidationMessageFor(model => model.PhotoUrl)
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<input type="submit" value="Create" class="btn btn-default" />
		</div>
	</div>
}

<div>
	<a class="btn btn-default" href="@Url.Action("Index", "Photo")">@FontAwesomeIconSet.ArrowCircleOLeft.Html Back to List</a>
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
