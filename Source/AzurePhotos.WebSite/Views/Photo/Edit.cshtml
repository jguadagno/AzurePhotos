@using Mvc.RazorTools.FontAwesome
@model AzurePhotos.Data.Photo

@{
	ViewBag.Title = "Edit Photo";
}

<h2>Edit Photo</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	
	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true)
		@Html.HiddenFor(model => model.PhotoId)

		<div class="form-group">
			@Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextBoxFor(model => model.Title, new { @class="form-control"} )
				@Html.ValidationMessageFor(model => model.Title)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.Description)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.ThumbnailUrl, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextBoxFor(model => model.ThumbnailUrl, new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.ThumbnailUrl)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.PhotoUrl, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextBoxFor(model => model.PhotoUrl, new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.PhotoUrl)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.DateAdded, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextBoxFor(model => model.DateAdded, new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.DateAdded)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.DateUpdated, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextBoxFor(model => model.DateUpdated, new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.DateUpdated)
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<button type="submit" class="btn btn-default">@FontAwesomeIconSet.FloppyO.Html Save</button>
			</div>
		</div>
	</div>
}

<div>
	<a class="btn btn-default" href="@Url.Action("Index", "Photo")">@FontAwesomeIconSet.ArrowCircleOLeft.Html Back to List</a>
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
