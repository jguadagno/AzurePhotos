@using Mvc.RazorTools.FontAwesome
@model AzurePhotos.Data.Photo

@{
	ViewBag.Title = "Details of Photos";
}

<h2>Details of Photo</h2>

<div>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Title)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Title)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Description)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Description)
		</dd>
		
		@if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
		{
			<dt>
				@Html.DisplayNameFor(model => model.ThumbnailUrl)
			</dt>

			<dd>
				<img src="@Url.Content(Model.ThumbnailBlobUrl)" alt="@Model.Title" class="img-thumbnail" /><br />
				@Html.DisplayFor(model => model.ThumbnailUrl)
			</dd>
		}
		<dt>
			@Html.DisplayNameFor(model => model.PhotoUrl)
		</dt>

		<dd>
			<img src="@Url.Content(Model.PhotoBlobUrl)" alt="@Model.Title" class="img-thumbnail"/><br />
			@Html.DisplayFor(model => model.PhotoUrl)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.DateAdded)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.DateAdded)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.DateUpdated)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.DateUpdated)
		</dd>

	</dl>
</div>
<p>
	<a class="btn btn-primary" href="@Url.Action("Edit", "Photo", new { id = Model.PhotoId })">@FontAwesomeIconSet.PencilSquareO.Html Edit</a>
	<a class="btn btn-danger" href="@Url.Action("Delete", "Photo", new { id = Model.PhotoId })">@FontAwesomeIconSet.TrashO.Html Delete</a>
	<a class="btn btn-default" href="@Url.Action("Index", "Photo")">@FontAwesomeIconSet.ArrowCircleOLeft.Html Back to List</a>
</p>
